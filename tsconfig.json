{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"lib": ["es2017"],
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	}
}